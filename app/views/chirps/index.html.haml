%ul.list-unstyled
  - @users.reject{|u| u.id == current_user.id}.sample(5).each do |user|
    - unless current_user.following?(user)
      %li
        = user.email
        = link_to "Follow", start_following_path(user_id: user.id), method: :post, class: "btn btn-default btn-xs"
